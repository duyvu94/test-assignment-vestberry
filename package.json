{
  "name": "test-assignment-vestberry",
  "author": "Vu Phuong Duy",
  "license": "ISC",
  "version": "1.0.0",
  "description": "A simple GraphQL backend application",
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn build && nodemon dist/index.js",
    "db:start": "docker-compose -f ./environment/docker-compose.yml --env-file .env up -d",
    "db:stop": "docker-compose -f ./environment/docker-compose.yml --env-file .env down",
    "db:clear": "docker-compose -f ./environment/docker-compose.yml --env-file .env down -v",
    "migrate": "yarn build && npx sequelize db:migrate",
    "migrate:undo": "yarn build && npx sequelize db:migrate:undo:all",
    "test": "jest --detectOpenHandles",
    "build": "tsc",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --fix \"**/*.ts\""
  },
  "dependencies": {
    "apollo-server-core": "^3.12.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.0.0",
    "graphql-tools": "^8.3.19",
    "graphql-ws": "^5.12.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.5",
    "sequelize-typescript": "^2.1.5",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^16.9.1",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@typescript-eslint/typescript-estree": "^5.57.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^29.1.0",
    "jest-mock": "^29.1.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^2.0.13",
    "prettier": "^2.3.2",
    "sequelize-cli": "^6.6.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  }
}
